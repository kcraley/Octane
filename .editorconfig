# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# JSON configuration
[*.{js,json,yml}]
indent_size = 2

# Makefile configuration
[Makefile]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false
